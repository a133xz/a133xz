{
    "headers": [
        {
            "source": "/(.*)",
            "headers": [
                {
                    "key": "Content-Security-Policy",
                    "value": "default-src 'self'; style-src 'self' 'unsafe-inline' fonts.googleapis.com; script-src 'self' 'unsafe-inline'; img-src 'self' data:; font-src fonts.gstatic.com; "
                },
                {
                    "key": "referrer-policy",
                    "value": "strict-origin-when-cross-origin"
                },
                {
                    "key": "X-XSS-Protection",
                    "value": "1; mode=block;"
                },
                {
                    "key": "x-frame-options",
                    "value": "deny"
                },
                {
                    "key": "x-content-type-options",
                    "value": "nosniff"
                },
                {
                    "key": "Permissions-Policy",
                    "value": "accelerometer=(), camera=(), geolocation=(), gyroscope=(), magnetometer=(), microphone=(), payment=(), usb=()"
                },
                {
                    "key": "Access-Control-Allow-Origin",
                    "value": "*"
                }
            ]
        }
    ]
}